{
    "name": "telegram-bot",
    "version": "1.0.0",
    "type": "module",
    "description": "telegram bot using grammyjs",
    "main": "index.js",
    "scripts": {
        "start": "npx tsx index.ts",
        "dev": "nodemon --exec ts-node --esm ./index.ts",
        "test": "test",
        "tsc": "tsc",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "keywords": [
        "bot",
        "telegram",
        "ai"
    ],
    "author": "DDiscua",
    "license": "ISC",
    "lint-staged": {
        "*.{js,ts,json,md,graphql}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts}": [
            "eslint --cache --ext .ts"
        ],
        "*.{js,ts}": [
            "eslint --fix --cache",
            "git add"
        ],
        "locales/**/*.json": [
            "eslint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "@grammyjs/conversations": "^1.1.2",
        "@grammyjs/parse-mode": "^1.7.1",
        "@grammyjs/ratelimiter": "^1.2.0",
        "@grammyjs/runner": "^2.0.3",
        "@grammyjs/transformer-throttler": "^1.2.1",
        "axios": "^1.7.7",
        "dotenv": "^16.4.5",
        "grammy": "^1.30.0",
        "mongoose": "^7.3.1",
        "openai": "^4.64.0",
        "telegram-format": "^3.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3",
        "winston": "^3.9.0",
        "winston-transport": "^4.5.0"
    },
    "devDependencies": {
        "@types/node": "^20.3.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.19.1"
    }
}
